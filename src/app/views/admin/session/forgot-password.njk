{% extends "../../not-users/layout.njk" %}

{% block head %}
<title>FoodFy | Recuperar Senha</title>
<link rel="stylesheet" href="/styles/users.css">

{% endblock head%}

{% block index %}{% endblock index%}


{% block content %}
<form class="container user-login" action="/users/forgot-password" method="POST">
    <div class="header">
        <div class="title">
            <h1>Esqueceu a senha?</h1> 
        </div>
    </div>
   
    <div class="inputs">
        <div class="item">
            <h4>Email</h4>
            <input 
                type="email" 
                name="email" 
                placeholder="Digite seu email" 
                value="{{user.email}}"
                onblur="Validate.apply(this,'isEmail')"
                required 
            >
        </div>
    </div>

    <div class="buttons">
        <button type="submit" class="button login">Recuperar</button>
    </div>
</div> 
    

</form>
<script src="/scripts/script.js"></script>
{% endblock content %}
